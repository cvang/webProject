<style>
    .something{
        display: inline-block;
        margin: 10px;
        margin-right: 20px;
    }
</style>
<h1>Listing Products</h1>

<%= current_user.id %><br>
<%= current_user.name %><br>
<%= current_user.last_name %><br>
<%= current_user.email%><br>
<%= current_user.phone %>
<%= link_to "Change Account", edit_user_registration_path %><br>
<%= link_to "Account" , user_path(current_user) %>
<br>

<table>
<!--
  <thead>
    <tr>
      <th>Name</th>
      <th>Product type</th>
      <th>Price</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  -->

  <tbody>
  <% @images.each do |image| %>
    <% @products.each do |product| %>
        <% if image.id == product.id && image.private == false %>
        <tr>
        <div class="something">
        <%= product.name %><br>
            <%= image_tag image.filename, :size => "100x100" %><br>
            <!-- < %= product.product_type %> -->
            &nbsp;&nbsp;&nbsp;&nbsp;
            <%= "$ #{product.price}" %><br>
            <!-- < %= product.detail %> -->
            <!--< %= link_to 'Show', product %> -->
            <% if current_user.admin == true %>
            <%= link_to 'Edit', edit_product_path(product) %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </div>
        </tr>
        <% end %>
    <% end %>
<% end %>
  </tbody>
</table>

<br>

