<p id="notice"><%= notice %></p>

<h1>Listing Carts</h1>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
      <tr>
            <% if current_user.id == cart.user.id && current_user.admin == false%>
        <div class="list">
                <td><%= cart.product.name %></td>
                <td><center><%= "$ #{cart.product.price}" %><center></td>
                <td><center>
                        <%= cart.quantity %>
                </center></td>
                <div class="btn-group" role="group" aria-label="...">
                    <td><%= link_to 'Edit', edit_cart_path(cart), :class => "btn btn-primary" %></td>
                </div>
                <div class="btn-group" role="group" aria-label="...">
                    <td><%= link_to 'Delete', cart, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %></td>
                </div>
            <% end %>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
      <hr>
<div class="checkout">
    <% @total_sum = 0 %>
    <% @carts.each do |cart| %>
        <% if current_user.id == cart.user_id && current_user.admin == false%>
            <% @total_sum += (cart.product.price * cart.quantity)%>
        <% end %>
    <% end %>
    <% if @total_sum != 0 %>
    <b><%= "TAX 8.25% " %></b><br>
    <% @total_sum *= 1.0825 %>
    <% @total_sum = @total_sum.round(2) %>
    <b><%= "Total Price: $#{@total_sum}" %></b><br>
<% end %>
</div>
<br>
<hr>
<h3>Deliver Address</h3>
<div class="addy">
<% @users.each do |user| %>
    <% user.addresses.each do |address| %>
        <% if current_user.id == user.id %>
            <%= address.line_1_building %><br>
            <%= address.line_2_street %><br>
            <%= address.city %><br>
            <%= address.zipcode %><br>
            <%= address.country %><br>
        <% end %>
    <% end %>
<% end %>
</div>
    <h3>Payment Card</h3>
<div class="credy">
    <% @users.each do |user| %>
        <% user.credit_cards.each do |credit_card| %>
            <% if current_user.id == user.id %>
                <b>Card Number: </b>
                <%= credit_card.card_numbers %><br>
                <b>Expire: </b>
                <%= credit_card.expire %><br>
                <b>CVS</b>
                <%= credit_card.cvs %><br>
            <% end %>
        <% end %>
    <% end %>
</div>



