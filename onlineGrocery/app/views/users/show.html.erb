<%if current_user.admin == true %>
    <h2>Admin Account</h2>
<% else %>
    <h2>My Account</h2>
<% end %>

<style>
    .something{
        display: inline-block;
        margin: 10px;
        margin-right: 20px;
    }
</style>
<div class="account">
    <b>User ID: </b>
    <%= current_user.id %><br>
    <b>Name: </b>
    <%= current_user.name %><br>
    <b>Last Name: </b>
    <%= current_user.last_name %><br>
    <b>Phone: </b>
    <%= current_user.phone %><br>
</div>
<table>
    <tbody>
<% @user.addresses.each do |address| %>
    <% if !address.new_record? %>
        <tr>
            <div class="something">
                <b>Line_1_building: </b>
            <%= address.line_1_building %><br>
            <b>Line_2_street: </b>
            <%= address.line_2_street %><br>
            <b>City: </b>
            <%= address.city %><br>
            <b>State: </b>
            <%= address.state %><br>
            <b>Zipcode: </b>
            <%= address.zipcode %><br>
            <b>Country: </b>
            <%= address.country %><br>
            <%= link_to "Edit", edit_address_path(address) %> |
            <%= link_to 'Destroy', address, method: :delete, data: {confirm: 'Are you sure?' } %>

        </div>
        </tr>
    <% end %>
<% end %>
</tbody>
</table>
<h4> Add Address</h4>
<%= render 'addresses/form' %>

<br>
<%= link_to "Edit Account", edit_user_registration_path %> |
<%= link_to "Back", root_url %>
